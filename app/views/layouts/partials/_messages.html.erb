<% flash.each do |name, msg| %>
	<% if msg.is_a?(String) %>
		<div data-controller="alert" data-alert-animation-class="fade" data-alert-auto-close="5000" role="alert" class="fixed-top d-flex justify-content-center align-items-center alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
			<button aria-hidden="true" class="close btn btn-outline-dark mx-2 rounded-circle" data-dismiss="alert" type="button" data-action="click->alert#close">&times;</button>
		</div>
	<% end %>
<% end %>
