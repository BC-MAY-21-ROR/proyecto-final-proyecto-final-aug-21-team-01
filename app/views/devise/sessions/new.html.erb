<div class ="main">
  <div class="container">
    <%= render_svg 'Mobile-Logo' %>
    <h1 class="header">Log in</h1>

    <div class="center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field spacing">
          <%= f.label :email, class: "formlabel" %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "forminput", autocomplete: "email" %>
        </div>

        <div class="field spacing">
          <%= f.label :password, class: "formlabel" %><br />
          <%= f.password_field :password, placeholder: "Password", class: "forminput", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: "formbutton" %>
        </div>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>
