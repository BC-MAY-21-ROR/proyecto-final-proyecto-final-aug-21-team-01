<div class ="login">
  <div class="login__container">
    <%= render_svg 'logo-header', styles: 'nav-bar__logo' %>
    <h1 class="login__header">LOGIN</h1>

    <div class="form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form__spacing">
          <%= f.label :email, class: "form__label" %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form__input", autocomplete: "email" %>
        </div>

        <div class="field form__spacing">
          <%= f.label :password, class: "form__label" %><br />
          <%= f.password_field :password, placeholder: "Password", class: "form__input", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "LOGIN", class: "form__button" %>
        </div>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>
